<?xml version="1.0"?>
<ruleset name="paith-notes">
  <description>Paith Notes code style</description>

  <rule ref="PSR12" />

  <file>api/src</file>
  <file>worker/src</file>
  <file>backend-shared/src</file>

  <exclude-pattern>*/vendor/*</exclude-pattern>

  <arg name="extensions" value="php"/>
  <arg name="colors"/>
  <arg name="parallel" value="4"/>
  <arg name="warning-severity" value="0"/>
</ruleset>
